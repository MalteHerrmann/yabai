# Default mode is tiling
yabai -m config layout bsp

# New window spawns to the right if vertical split,
# or bottom if horizontal split
yabai -m config window_placement second_child

# Per default add 10 px padding to the windows
yabai -m space --padding abs:10:10:10:10

# Add 10px gap between windows
yabai -m space --gap abs:10
